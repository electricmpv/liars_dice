{
  "name": "liars-dice",
  "version": "1.0.0",
  "description": "多人在线吹牛骰子游戏",
  "private": true,
  "scripts": {
    "client:dev": "cd client && npm run dev",
    "server:dev": "cd server && tsc -w",
    "server:start": "cd server && node dist/index.js",
    "dev": "concurrently \"npm run server:dev\" \"npm run server:start\" \"npm run client:dev\"",
    "build": "tsc"
  },
  "workspaces": [
    "client",
    "server",
    "shared"
  ],
  "keywords": [
    "game",
    "multiplayer",
    "dice",
    "liars-dice"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^22.13.11",
    "concurrently": "^7.6.0",
    "socket.io": "^4.8.1",
    "typescript": "^5.8.2",
    "zod": "^3.24.2"
  },
  "main": "index.js",
  "dependencies": {
    "@colyseus/monitor": "^0.16.7",
    "@colyseus/schema": "^3.0.35",
    "@types/socket.io-client": "^3.0.0",
    "colyseus.js": "^0.16.16",
    "socket.io-client": "^4.8.1"
  }
}
